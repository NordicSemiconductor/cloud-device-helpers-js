{
  "name": "@nordicsemiconductor/firmware-ci-device-helpers",
  "version": "0.0.0-development",
  "description": "Helper functions for interacting with the nRF9160 used during end-to-end tests",
  "main": "./dist/export.js",
  "scripts": {
    "test": "jest",
    "start": "node --unhandled-rejections=strict dist/runner/runner.js",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NordicSemiconductor/cloud-firmware-ci-device-helpers-js.git"
  },
  "keywords": [
    "nrf-asset-tracker",
    "iot",
    "firmware",
    "end-to-end-testing"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/NordicSemiconductor/cloud-firmware-ci-device-helpers-js/issues"
  },
  "homepage": "https://github.com/NordicSemiconductor/cloud-firmware-ci-device-helpers-js#readme",
  "dependencies": {
    "@serialport/parser-readline": "12.0.0",
    "cbor": "9.0.1",
    "semver": "7.5.4",
    "serialport": "12.0.0",
    "shell-quote": "1.8.1"
  },
  "devDependencies": {
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "12.0.86",
    "@swc/jest": "0.2.29",
    "@types/jest": "29.5.4",
    "@types/node": "20.6.0",
    "@types/semver": "7.5.1",
    "@types/serialport": "8.0.2",
    "@types/shell-quote": "1.7.1",
    "jest": "29.6.4"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "release": {
    "branches": [
      "saga",
      {
        "name": "!(saga)",
        "prerelease": true
      }
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failTitle": false
        }
      ]
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "package-lock.json",
    "dist",
    "at_host",
    "cli/index.js",
    "LICENSE",
    "README.md"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    },
    "testRegex": ".+\\.spec\\.ts$"
  }
}
