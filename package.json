{
  "name": "@bifravst/firmware-ci",
  "version": "0.0.0-development",
  "description": "Helper functions for interacting with the nRF9160 used during end-to-end tests",
  "main": "./dist/export.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node --unhandled-rejections=strict dist/runner/runner.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bifravst/firmware-ci.git"
  },
  "keywords": [
    "Cloud",
    "IoT",
    "bifravst",
    "AssetTracker",
    "NordicSemiconductor"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/bifravst/firmware-ci/issues"
  },
  "homepage": "https://github.com/bifravst/firmware-ci#readme",
  "dependencies": {
    "@serialport/parser-readline": "9.0.1",
    "commander": "7.0.0",
    "form-data": "3.0.0",
    "node-fetch": "2.6.1",
    "serialport": "9.0.6",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@bifravst/code-style": "8.0.134",
    "@bifravst/eslint-config-typescript": "5.0.90",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-angular": "11.0.0",
    "@types/chalk": "2.2.0",
    "@types/commander": "2.12.2",
    "@types/node": "14.14.22",
    "@types/node-fetch": "2.5.8",
    "@types/serialport": "8.0.1",
    "@types/uuid": "8.3.0",
    "chalk": "4.1.0",
    "eslint": "7.18.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1",
    "typescript": "4.1.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npx tsc"
    }
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "release": {
    "branches": [
      "saga",
      {
        "name": "!(saga)",
        "prerelease": true
      }
    ],
    "remoteTags": true
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "package-lock.json",
    "dist",
    "at_client",
    "cli/index.js",
    "LICENSE",
    "README.md"
  ]
}
