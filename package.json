{
  "name": "@nordicsemiconductor/firmware-ci-device-helpers",
  "version": "0.0.0-development",
  "description": "Helper functions for interacting with the nRF9160 used during end-to-end tests",
  "main": "./dist/export.js",
  "scripts": {
    "test": "jest",
    "start": "node --unhandled-rejections=strict dist/runner/runner.js",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NordicSemiconductor/cloud-firmware-ci-device-helpers-js.git"
  },
  "keywords": [
    "nrf-asset-tracker",
    "iot",
    "firmware",
    "end-to-end-testing"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/NordicSemiconductor/cloud-firmware-ci-device-helpers-js/issues"
  },
  "homepage": "https://github.com/NordicSemiconductor/cloud-firmware-ci-device-helpers-js#readme",
  "dependencies": {
    "@serialport/parser-readline": "10.3.0",
    "cbor": "8.1.0",
    "chalk": "4.1.2",
    "semver": "7.3.7",
    "serialport": "10.4.0",
    "shell-quote": "1.7.3",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "11.0.115",
    "@swc/jest": "0.2.22",
    "@types/jest": "28.1.8",
    "@types/node": "18.6.4",
    "@types/semver": "7.3.12",
    "@types/serialport": "8.0.2",
    "@types/shell-quote": "1.7.1",
    "@types/uuid": "8.3.4",
    "jest": "29.0.1"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "release": {
    "branches": [
      "saga",
      {
        "name": "!(saga)",
        "prerelease": true
      }
    ],
    "remoteTags": true
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "package-lock.json",
    "dist",
    "at_host",
    "cli/index.js",
    "LICENSE",
    "README.md"
  ],
  "jest": {
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    },
    "testRegex": ".+\\.spec\\.ts$"
  }
}
