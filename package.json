{
  "name": "@nordicsemiconductor/device-helpers",
  "version": "0.0.0-development",
  "description": "Helper functions for interacting with the nRF9160 used during end-to-end tests",
  "type": "module",
  "typings": "dist/export.d.ts",
  "exports": {
    "import": "./dist/export.js",
    "node": "./dist/export.js"
  },
  "scripts": {
    "test": "npx tsx --test ./device/*.spec.ts",
    "start": "node --unhandled-rejections=strict dist/runner/runner.js",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NordicSemiconductor/cloud-device-helpers-js.git"
  },
  "keywords": [
    "nrf-asset-tracker",
    "iot",
    "firmware",
    "end-to-end-testing"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/NordicSemiconductor/cloud-device-helpers-js/issues"
  },
  "homepage": "https://github.com/NordicSemiconductor/cloud-device-helpers-js#readme",
  "dependencies": {
    "@serialport/parser-readline": "12.0.0",
    "cbor": "9.0.1",
    "semver": "7.5.4",
    "serialport": "12.0.0",
    "shell-quote": "1.8.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "18.5.0",
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "13.1.11",
    "@nordicsemiconductor/eslint-config-asset-tracker-cloud-typescript": "17.0.0",
    "@types/node": "20.11.5",
    "@types/semver": "7.5.6",
    "@types/serialport": "8.0.5",
    "@types/shell-quote": "1.7.5",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-unicorn": "50.0.1",
    "tsx": "4.7.0"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=20",
    "npm": ">=9"
  },
  "release": {
    "branches": [
      "saga",
      {
        "name": "!(saga)",
        "prerelease": true
      }
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failTitle": false
        }
      ]
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "package-lock.json",
    "dist",
    "at_host",
    "cli/index.js",
    "LICENSE",
    "README.md"
  ],
  "prettier": "@nordicsemiconductor/asset-tracker-cloud-code-style/.prettierrc"
}
