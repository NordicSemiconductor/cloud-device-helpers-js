{
  "name": "@nordicsemiconductor/firmware-ci-device-helpers",
  "version": "0.0.0-development",
  "description": "Helper functions for interacting with the nRF9160 used during end-to-end tests",
  "main": "./dist/export.js",
  "scripts": {
    "test": "jest",
    "start": "node --unhandled-rejections=strict dist/runner/runner.js",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NordicSemiconductor/cloud-firmware-ci-device-helpers-js.git"
  },
  "keywords": [
    "Cloud",
    "IoT",
    "AssetTracker",
    "Nordic Semiconductor"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/NordicSemiconductor/cloud-firmware-ci-device-helpers-js/issues"
  },
  "homepage": "https://github.com/NordicSemiconductor/cloud-firmware-ci-device-helpers-js#readme",
  "dependencies": {
    "@serialport/parser-readline": "9.2.4",
    "chalk": "4.1.2",
    "semver": "7.3.5",
    "serialport": "9.2.4",
    "shell-quote": "*",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "13.2.0",
    "@commitlint/config-angular": "13.2.0",
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "9.1.0",
    "@nordicsemiconductor/eslint-config-asset-tracker-cloud-typescript": "8.1.7",
    "@types/jest": "27.0.2",
    "@types/node": "16.7.8",
    "@types/semver": "7.3.8",
    "@types/serialport": "8.0.2",
    "@types/shell-quote": "1.7.1",
    "@types/uuid": "8.3.1",
    "eslint": "7.32.0",
    "husky": "7.0.2",
    "jest": "27.2.4",
    "lint-staged": "11.2.0",
    "pinst": "2.1.6",
    "prettier": "2.4.1",
    "ts-jest": "27.0.5",
    "typescript": "4.4.3"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "release": {
    "branches": [
      "saga",
      {
        "name": "!(saga)",
        "prerelease": true
      }
    ],
    "remoteTags": true
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "package-lock.json",
    "dist",
    "at_host",
    "cli/index.js",
    "LICENSE",
    "README.md"
  ],
  "jest": {
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      ".+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".+\\.spec\\.ts$",
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}
